root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[compose.yaml]
indent_size = 4

# PHP files
[*.php]
indent_size = 4

# JavaScript, Vue, CSS files
[*.{js,vue,css,scss,json}]
indent_size = 4

# Blade templates
[*.blade.php]
indent_size = 4
